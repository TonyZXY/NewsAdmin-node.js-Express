<div class="row">
    <div class="col-md-2">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item disable">
                        <a class="nav-link" href="/news/news">
                            <span data-feather="home"></span>
                            列表 <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/news/add">
                            <span data-feather="file"></span>
                            添加
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/news/news">
                            <span data-feather="shopping-cart"></span>
                            查询
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="col-md-10">
        <form>
            <div class="row">
                <div class="col-4">
                    <label>Start: YYYY,MM,DD</label>
                    <input type="text" class="form-control" placeholder="Start: YYYY,MM,DD">
                </div>
                <div class="col-4">
                    <label>End: YYYY,MM,DD</label>
                    <input type="text" class="form-control" placeholder="End: YYYY,MM,DD">
                </div>
                <div class="col-2">
                    <br>
                    <input type="submit" class="btn btn-primary" value="Search">
                </div>
            </div>
        </form>
        <br>
        <br>
        <ul class="list-group ">
            <li class="list-group-item d-flex justify-content-between align-items-center">News Title
                <span><a class="btn btn-link">Edit</a></span>
            </li>
            <!--<li class="list-group-item">Test item </li>-->
            {{#each newsList}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <p class="align-items-center">
                        <time datetime="{{this.publishedTime}}">{{this.publishedTime}}</time>
                        <strong>{{this.title}}</strong>
                    </p>
                    <span><a href="/news/news/{{this._id}}" class="btn btn-primary"> Edit </a></span>
                </li>
            {{/each}}
        </ul>

        <br>
        <br>
    </div>
</div>